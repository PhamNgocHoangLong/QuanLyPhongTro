@page "/nguoithues"
@using Microsoft.AspNetCore.Components.QuickGrid
@inject QuanLyPhongTro.Data.QuanLyPhongTroContext DB
@using QuanLyPhongTro

<PageTitle>Người Thuê</PageTitle>

<h1 class="text-info">Danh Sách Người Thuê</h1>

<p>
    <a href="nguoithues/create" class="btn btn-primary">Tạo mới</a>
</p>

<QuickGrid Class="table" Items="DB.NguoiThue">
    <PropertyColumn Property="nguoithue => nguoithue.MaPhongTro" Title="Mã phòng"/>
    <PropertyColumn Property="nguoithue => nguoithue.HoTen" Title="Họ tên"/>
    <PropertyColumn Property="nguoithue => nguoithue.SDT" Title="SĐT"/>
    <PropertyColumn Property='nguoithue => nguoithue.GioiTinh ? "Nam" : "Nữ"' Title="Giới tính"/>
    <PropertyColumn Property="nguoithue => nguoithue.Email" Title="Email"/>
    <PropertyColumn Property="nguoithue => nguoithue.NgaySinh" Title="Ngày sinh"/>
    <PropertyColumn Property="nguoithue => nguoithue.NgayDK" Title="Ngày thuê"/>

    <TemplateColumn Context="nguoithue">
        <a href="@($"nguoithues/edit?idnguoithue={nguoithue.MaNgThue}")" class="text-decoration-none text-warning fw-medium">Sửa</a> |
        <a href="@($"nguoithues/details?idnguoithue={nguoithue.MaNgThue}")" class="text-decoration-none text-warning fw-medium">Chi tiết</a> |
        <a href="@($"nguoithues/delete?idnguoithue={nguoithue.MaNgThue}")" class="text-decoration-none text-warning fw-medium">Xóa</a>
    </TemplateColumn>
</QuickGrid>
