@page "/phongtros/delete"
@inject QuanLyPhongTro.Data.QuanLyPhongTroContext DB
@using QuanLyPhongTro
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Xóa phòng</PageTitle>

<h1 class="text-danger-emphasis fw-bold text-center">Xóa phòng</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa phòng này!</h3>
<div>
    <hr />
    @if (phongtro is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2 text-primary">Mã chủ trọ</dt>
            <dd class="col-sm-10">@phongtro.MaChuTro</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2 text-primary">Tên chủ trọ</dt>
            <dd class="col-sm-10">@phongtro.TenChuTro</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2 text-primary">Địa chỉ trọ</dt>
            <dd class="col-sm-10">@phongtro.DiaChiTro</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2 text-primary">Trạng thái</dt>
            <dd class="col-sm-10">@phongtro.TrangThai</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2 text-primary">Diện tích</dt>
            <dd class="col-sm-10">@phongtro.DienTich</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2 text-primary">Giá phòng</dt>
            <dd class="col-sm-10">@phongtro.Gia</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2 text-primary">Ngày đăng</dt>
            <dd class="col-sm-10">@phongtro.NgayDang</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2 text-primary">Chi tiết</dt>
            <dd class="col-sm-10">@phongtro.ChiTiet</dd>
        </dl>
        <EditForm method="post" Model="phongtro" OnValidSubmit="DeletePhongTro" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger me-3 px-4" disabled="@(phongtro is null)">Xóa</button>
            <a href="/phongtros" class="text-decoration-none">Quay lại</a>
        </EditForm>
    }
</div>

@code {
    PhongTro? phongtro;

    [SupplyParameterFromQuery]
    public int MaPhongTro { get; set; }

    protected override async Task OnInitializedAsync()
    {
        phongtro = await DB.PhongTro.FirstOrDefaultAsync(m => m.MaPhongTro == MaPhongTro);

        if (phongtro is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    public async Task DeletePhongTro()
    {
        DB.PhongTro.Remove(phongtro!);
        await DB.SaveChangesAsync();
        NavigationManager.NavigateTo("/phongtros");
    }
}
